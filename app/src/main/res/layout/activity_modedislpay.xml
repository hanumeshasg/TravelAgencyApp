<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.mayank.travelagentproject.Modedislpay"
android:background="@drawable/back">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select Mode"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold"
        android:id="@+id/selectmodetext"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/myactionbarcolor"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/selectmodetext"
        ></View>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/selectmodetext"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/autoCompleteTextViewfrom"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp"
        android:fastScrollEnabled="true"/>

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:inputType="text"
        android:maxLines="1"
        android:textAppearance="?android:textAppearanceLarge"
        android:hint="From"
        android:textSize="25dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:id="@+id/autoCompleteTextViewfrom"
        android:textStyle="italic|bold"
        android:completionThreshold="2"
        android:maxEms="15"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/autoCompleteTextView"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/getbutton" />
<AutoCompleteTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:singleLine="true"
    android:inputType="text"
    android:maxLines="1"
    android:textColorHint="#000000"
    android:hint="To"
    android:textSize="25dp"
    android:textColor="#000000"
    android:textAppearance="?android:textAppearanceLarge"
    android:textStyle="italic|bold"
    android:id="@+id/autoCompleteTextView"
    android:completionThreshold="2"
    android:maxEms="15"
    android:layout_above="@+id/imageButton"
    android:layout_alignParentStart="true" />

<ImageButton
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:id="@+id/imageButton"
    android:src="@drawable/donetwo"
    android:clickable="true"
    android:background="#00FFFFFF"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Location"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:background="#000000"
        android:id="@+id/getbutton"
        android:layout_alignBottom="@+id/autoCompleteTextViewfrom"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/autoCompleteTextViewfrom" />


</RelativeLayout>
