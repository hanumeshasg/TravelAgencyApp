<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mayank.travelagentproject.Signup"
    android:background="@color/windowbackground">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Sign Up With US"
                android:textSize="30dp"
                android:gravity="center"
                android:textStyle="bold"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:hint="First Name"
                android:id="@+id/firstname"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:singleLine="true"
                android:id="@+id/lastname"/>
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:id="@+id/email"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="290dp"
                android:minEms="7"
                android:inputType="textWebPassword"
                android:layout_height="wrap_content"
                android:hint="Password (min 7 digits)"
                android:id="@+id/password"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:id="@+id/imageView2"
                android:src="@drawable/eye"
                android:layout_gravity="right" />
        </LinearLayout>

            <EditText
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:inputType="textWebPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minEms="7"
                android:hint="Retype-Password"
                android:id="@+id/repassword"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="signup"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:id="@+id/register"
                android:background="@color/myactionbarcolor"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OR"
        android:layout_marginBottom="5dp"
        android:textSize="30dp"
        android:textStyle="italic|bold"
        android:id="@+id/textView3"
        android:layout_above="@+id/googlelogo"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp with Google"
        android:id="@+id/googlelogo"
        android:background="#ffffff"
        android:drawableLeft="@drawable/google"
        android:textSize="15dp"
        android:layout_above="@+id/facebooklogo"
        android:layout_marginLeft="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SignUp with Facebook"
        android:id="@+id/facebooklogo"
        android:textSize="15dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/facebook"
        android:background="#3b5998"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
